<main>
  <h1>Welcome</h1>
  <ul>
  <% @users.each do |user| %>
    <%= link_to user_path(user.id) do %>
    <li  @user.id class="user-element" >
      <div class="photo"><%= user.photo %></div>
      <div class="user-information">
        <h2><%= user.name %></h2>
        <h4>Number of posts: <%= user.postsCounter %></h4>
      </div>
    </li>
    <% end %>
  <% end %>
  </ul>
</main>
